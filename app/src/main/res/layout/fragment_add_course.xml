<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/baseBackground"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/almarai_extra_bold"
            android:text="Add Course"
            android:textColor="@color/textBackground"
            android:textSize="30sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="20dp"
        android:tint="@color/Gold"
        android:src="@drawable/label_shape" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/almarai_bold"
        android:text="Name"
        android:textColor="@color/textBackground"
        android:textSize="18sp" />

    <EditText
        android:textColor="@color/textBackground"
        android:id="@+id/course_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:autofilledHighlight="@null"
        android:background="@drawable/custom_edit_text_cut_2"
        android:fontFamily="@font/font_almarai_light"
        android:hint="Java fundamentals"
        android:inputType="text"
        android:padding="10dp"
        android:textSize="15sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/almarai_bold"
        android:text="Description"
        android:textColor="@color/textBackground"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/course_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:autofilledHighlight="@null"
        android:background="@drawable/custom_edit_text_cut_2"
        android:fontFamily="@font/font_almarai_light"
        android:gravity="top|start"
        android:textColor="@color/textBackground"
        android:hint="Programming basics with Java"
        android:inputType="textMultiLine"
        android:lines="5"
        android:padding="10dp"
        android:textSize="15sp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/almarai_bold"
        android:text="Departments"
        android:textColor="@color/textBackground"
        android:textSize="18sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/departments"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical" />

    <Button
        android:id="@+id/add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
android:background="@drawable/rec_btn"
        android:textStyle="bold"
        android:fontFamily="@font/font_almarai_regular"
        android:stateListAnimator="@null"
        android:text="Add"
        android:textColor="@color/on_dark" />
</LinearLayout>