<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.LoginActivity"
    android:background="@color/baseBackground">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="413dp"

        android:layout_height="421dp"
        android:src="@drawable/back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageView>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="413dp"

        android:layout_height="421dp"
        android:src="@drawable/back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="@id/imageView"></ImageView>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="108dp"
        android:layout_height="108dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_logo"
        android:tint="@color/logoInversColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <TextView
        android:id="@+id/logoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mindsoft"
        android:textSize="30sp"
        android:layout_marginTop="85dp"
        android:textColor="@color/logoInversColor"
        android:textStyle="bold"
        android:fontFamily="@font/almarai_extra_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent" />
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:id="@+id/loginForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.596">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login"
                android:textColor="@color/logoInversColor"
                android:textSize="30dp"
                android:textStyle="bold"></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="120dp"

                android:layout_marginBottom="5dp"
                android:fontFamily="@font/font_almarai_light"
                android:text=" Email Address  or  Student code"
                android:textColor="@color/textBackground"
                android:textSize="18sp"

                android:textStyle="bold"></TextView>

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:autofilledHighlight="@null"
                android:background="@drawable/custom_edit_text_cut"
                android:drawableLeft="@drawable/ic_baseline_person_24"
                android:fontFamily="@font/font_almarai_light"
                android:hint="  ex@example.com /  20220200"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:textColor="@color/textBackground"
                android:textSize="15sp"></EditText>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/font_almarai_light"
                android:text=" Password"
                android:textColor="@color/textBackground"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:background="@drawable/custom_edit_text_cut"
                android:drawableLeft="@drawable/ic_baseline_lock_person_24"
                android:fontFamily="@font/font_almarai_light"
                android:hint=" P@ssw0rd"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColor="@color/textBackground"
                android:textSize="15sp" />

            <Button
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rec_btn"
                android:fontFamily="@font/font_almarai_regular"
                android:stateListAnimator="@null"
                android:text="Submit"
                android:textColor="@color/on_dark"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/forgetPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/font_almarai_light"
                android:text="Forget password?"
                android:textAllCaps="true"
                android:textColor="@color/Gold"
                android:textSize="20sp"

                android:textStyle="bold" />

            <TextView
                android:id="@+id/findStudentCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/font_almarai_light"
                android:text="Find my student code"
                android:textAllCaps="true"
                android:textColor="#F1AD04"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/label_shape"
                android:tint="@color/Gold" />

            <Button
                android:id="@+id/create"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/rec_btn"
                android:backgroundTint="@color/Gold"
                android:fontFamily="@font/font_almarai_regular"
                android:stateListAnimator="@null"
                android:text="Create account"
                android:textColor="@color/on_dark"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>