<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/baseBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/almarai_extra_bold"
            android:text="Start session"
            android:textColor="@color/textBackground"
            android:textSize="25sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/label_shape" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/almarai_bold"
        android:text="Session title"
        android:textColor="@color/textBackground"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:autofilledHighlight="@null"
        android:background="@drawable/custom_edit_text_cut_2"
        android:fontFamily="@font/font_almarai_light"
        android:hint="Lecture #1"
        android:textColor="@color/textBackground"
        android:inputType="text"
        android:padding="10dp"
        android:textSize="15sp" />

    <Button
        android:id="@+id/start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
android:background="@drawable/rec_btn"
        android:fontFamily="@font/font_almarai_regular"
        android:stateListAnimator="@null"
        android:text="Start"
        android:textStyle="bold"
        android:textColor="@color/on_dark" />
</LinearLayout>