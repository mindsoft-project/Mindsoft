<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.FirstPageSignup"
    android:background="@color/baseBackground">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
     >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:background="@color/baseBackground"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_almarai_light"
                android:text="Email address"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:autofilledHighlight="@null"
                android:background="@drawable/custom_edit_text_cut_2"
                android:fontFamily="@font/font_almarai_light"
                android:hint="name@nctu.edu.eg"
                android:inputType="textEmailAddress"

                android:minHeight="48dp"
                android:padding="10dp"
                android:textColor="@color/textBackground"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/font_almarai_light"
                        android:text="First Name"

                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/first_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"

                        android:background="@drawable/custom_edit_text_cut_2"
                        android:fontFamily="@font/font_almarai_light"
                        android:inputType="text"
                        android:minHeight="48dp"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textColor="@color/textBackground"
                        android:textSize="15sp"
                        tools:ignore="SpeakableTextPresentCheck" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/font_almarai_light"
                        android:text="Last name"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/last_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"

                        android:background="@drawable/custom_edit_text_cut_2"
                        android:fontFamily="@font/font_almarai_light"
                        android:inputType="text"
                        android:minHeight="48dp"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textColor="@color/textBackground"
                        android:textSize="15sp"
                        tools:ignore="SpeakableTextPresentCheck" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_almarai_light"
                android:text="National ID"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/national_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:background="@drawable/custom_edit_text_cut_2"

                android:digits="0123456789"
                android:fontFamily="@font/font_almarai_light"
                android:inputType="text"
                android:maxLength="14"
                android:minHeight="48dp"
                android:padding="10dp"
                android:textColor="@color/textBackground"
                android:textSize="15sp"
                tools:ignore="SpeakableTextPresentCheck" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/font_almarai_light"
                    android:text=" Password"
                    android:textColor="@color/textBackground"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/showPass"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginStart="120dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/rec_btn"
                    android:backgroundTint="@color/Gold"
                    android:drawableRight="@drawable/ic_baseline_remove_red_eye_24"
                    android:fontFamily="@font/font_almarai_light"
                    android:padding="1dp"
                    android:text="   Show Password__ "
                    android:textColor="@color/logoInversColor"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>


            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:background="@drawable/custom_edit_text_cut_2"

                android:fontFamily="@font/font_almarai_light"
                android:inputType="textPassword"
                android:minHeight="48dp"
                android:padding="10dp"
                android:textColor="@color/textBackground"
                android:textSize="15sp"
                tools:ignore="SpeakableTextPresentCheck" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal"
                android:layout_marginTop="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/font_almarai_light"
                    android:text="Role"
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/userType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:spinnerMode="dropdown"
                    tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />
            </LinearLayout>

            <Button
                android:id="@+id/next"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/rec_btn"
                android:fontFamily="@font/font_almarai_regular"
                android:stateListAnimator="@null"
                android:text="Submit"
                android:layout_marginTop="30dp"
                android:textColor="@color/on_dark"
                android:layout_marginBottom="50dp"/>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>